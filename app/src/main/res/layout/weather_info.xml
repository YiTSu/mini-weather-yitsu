<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#ffcd2626">

        <ImageView
            android:id="@+id/title_city"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:src="@drawable/title_city"/>

        <ImageView
            android:id="@+id/city_seperator"
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/title_city"
            android:background="#A71717"/>
        <TextView
            android:id="@+id/title_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="北京天气"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:layout_toRightOf="@+id/city_seperator"
            android:paddingLeft="5dp"/>

        <ImageView
            android:id="@+id/title_update"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/title_update"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:visibility="visible" />
        <ImageView
            android:id="@+id/title_share"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:src="@drawable/title_share"
            android:layout_toLeftOf="@+id/title_update" />
        <ImageView
            android:id="@+id/title_location"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:src="@drawable/base_action_bar_action_city"
            android:layout_toLeftOf="@+id/title_share" />

    </RelativeLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title"
        android:background="@drawable/biz_plugin_weather_shenzhen_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="15dp"
                android:singleLine="true"
                android:layout_marginTop="13dp"
                android:text="北京"
                android:textSize="40sp"
                android:textColor="@android:color/white"/>

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/city"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:singleLine="true"
                android:text="今天18：25发布"
                android:textColor="@android:color/white"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/time"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:singleLine="true"
                android:text="湿度：57%"
                android:textColor="@android:color/white"
                android:textSize="15sp"/>

            <LinearLayout
                android:id="@+id/pm2_5_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingBottom="6dp"
                    android:paddingTop="6dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/pm2_5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/white"
                            android:text="PM2.5"
                            android:textSize="12sp"/>
                        <TextView
                            android:id="@+id/pm_data"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="220"
                            android:textColor="@android:color/white"
                            android:textSize="30sp"/>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/pm2_5_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/biz_plugin_weather_0_50"
                        />
                </LinearLayout>

                <TextView
                    android:id="@+id/pm2_5_quality"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="重度污染"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:singleLine="true"
                    android:textSize="20sp"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_below="@+id/pm2_5_content"
                android:layout_marginTop="5dp"
                >

                <ImageView
                    android:id="@+id/weather_image"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/biz_plugin_weather_qing" />

                <TextView
                    android:id="@+id/week_today"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/weather_image"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:text="今天 星期三"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/temperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/weather_image"
                    android:layout_marginLeft="5dp"
                    android:layout_below="@id/week_today"
                    android:text="-2℃——7℃"
                    android:textColor="@android:color/white"
                    android:textSize="30sp"/>

                <TextView
                    android:id="@+id/climate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/weather_image"
                    android:layout_marginLeft="5dp"
                    android:layout_below="@id/temperature"
                    android:text="多云转晴"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/wind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/weather_image"
                    android:layout_marginLeft="5dp"
                    android:layout_below="@id/climate"
                    android:text="多云转晴"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"/>

            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
